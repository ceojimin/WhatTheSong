<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/information_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="101" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="474"
            android:orientation="horizontal" >

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="16" />

            <ListView
                android:id="@+id/information_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="714"
                android:cacheColorHint="#00000000"
                android:clickable="true" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="13" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="63"
            android:orientation="horizontal" >

            <net.daum.adam.publisher.AdView
                android:id="@+id/adview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentBottom="true"
                clientId="4987Z0MT13dc1a8848f"
                requestInterval="60"
                android:visibility="visible" />
        </RelativeLayout>

        <!--
             <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10" />  -->

    </LinearLayout>

</RelativeLayout>